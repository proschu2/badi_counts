{
  "hosting": {
    "public": "build/web",
    "ignore": ["firebase.json", "**/node_modules/**"],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|ico|svg)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
    // "frameworksBackend": {
    //   "region": "us-central1"
    // }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "config": {
    "flutter": {
      "platforms": {
        "android": {
          "default": {
            "projectId": "badi-counts-zh",
            "appId": "1:1097937205336:android:f3a66d8338db9f2e42b22d",
            "fileOutput": "android/app/google-services.json"
          }
        },
        "dart": {
          "lib/firebase_options.dart": {
            "projectId": "badi-counts-zh",
            "configurations": {
              "android": "1:1097937205336:android:f3a66d8338db9f2e42b22d",
              "web": "1:1097937205336:web:755a7d496e7354fb42b22d"
            }
          }
        }
      }
    }
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000,
      "host": "localhost"
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  },
  "functions": [
    {
      "source": "functions",
      "ignore": [
        "**/.venv/**",
        "**/venv/**",
        "serviceAccountKey.json",
        "firebase.json",
        "**/node_modules/**"
      ],
      "entryPoint": "main.scheduled_fetch_freespace"
    }
  ]
}
